{
  "name": "logos-platform",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/backend",
    "apps/frontend"
  ],
  "scripts": {
    "backend:dev": "npm run dev --workspace=@logos/backend",
    "frontend:dev": "npm run dev --workspace=@logos/frontend",
    "dev": "concurrently \"npm run backend:dev\" \"npm run frontend:dev\"",
    "backend:build": "npm run build --workspace=@logos/backend",
    "frontend:build": "npm run build --workspace=@logos/frontend",
    "build": "npm run backend:build && npm run frontend:build"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.9.2",
    "concurrently": "^8.2.2"
  }
}
