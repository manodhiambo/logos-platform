{
  "name": "logos-platform",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/backend",
    "apps/frontend"
  ],
  "scripts": {
    "backend:dev": "npm run dev --workspace=@logos/backend",
    "frontend:dev": "npm run dev --workspace=@logos/frontend",
    "dev": "concurrently \"npm run backend:dev\" \"npm run frontend:dev\"",
    "backend:build": "npm run build --workspace=@logos/backend",
    "frontend:build": "npm run build --workspace=@logos/frontend",
    "build": "npm run backend:build && npm run frontend:build"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/estree": "^1.0.8",
    "@types/express": "^5.0.5",
    "@types/helmet": "^0.0.48",
    "@types/json-schema": "^7.0.15",
    "@types/json5": "^0.0.30",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.10.0",
    "@types/nodemailer": "^7.0.3",
    "@types/prop-types": "^15.7.15",
    "concurrently": "^8.2.2"
  }
}
